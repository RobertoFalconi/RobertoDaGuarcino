<head>
    <!-- Jquery Core Js -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/jquery-countto/jquery.countTo.js"></script>
    <!-- Wait Me Plugin Js -->
    <script src="~/plugins/waitme/waitMe.js"></script>
